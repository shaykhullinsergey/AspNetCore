{
  "compilerOptions": {
    "outDir": "../wwwroot/js/",
    "sourceMap": true,
    "noImplicitAny": true,
		"noEmit": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
      "components": ["src/Components"],
      "components/*": ["src/Components/*"],
			"controls": ["src/Controls"],
      "controls/*": ["src/Controls/*"],
			"bulma-aspnetcore/*": ["src/Bulma/*"]
		}
	},
  "include": [
    "./*",
		"./src/*"
  ],
	"compileOnSave": false
}