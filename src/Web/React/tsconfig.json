{
  "compilerOptions": {
    "outDir": "../wwwroot/js/",
    "sourceMap": true,
    "noImplicitAny": true,
		"noEmit": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
      "Components": ["src/Components"],
      "Components/*": ["src/Components/*"],
			"Controls": ["src/Controls"],
			"Controls/*": ["src/Controls/*"]
		}
	},
  "include": [
    "./*"
  ],
	"compileOnSave": false
}